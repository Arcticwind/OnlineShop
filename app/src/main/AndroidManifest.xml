<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.daniel.onlineshop">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.SoldItemsActivity"
            android:parentActivityName=".activities.MainActivity"/>
        <activity
            android:name=".activities.ReceiptActivity"
            android:parentActivityName=".activities.UserStoreActivity" />
        <activity
            android:name=".activities.ShoppingCartActivity"
            android:parentActivityName=".activities.UserStoreActivity" />
        <activity
            android:name=".activities.ItemDetailsActivity"
            android:parentActivityName=".activities.UserStoreActivity" />
        <activity
            android:name=".activities.ResetPasswordActivity"
            android:parentActivityName=".activities.LoginActivity" />
        <activity
            android:name=".activities.UserStoreActivity"
            android:parentActivityName=".activities.UserStoreActivity" />
        <activity android:name=".activities.AddEditItemActivity" />
        <activity
            android:name=".activities.HistoryActivity"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.StatisticActivity"
            android:parentActivityName=".activities.MainActivity" />
        <activity android:name=".activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.RegistrationActivity"
            android:parentActivityName=".activities.LoginActivity" />
        <activity
            android:name=".activities.StoreActivity"
            android:parentActivityName=".activities.MainActivity" />
        <activity android:name=".activities.MainActivity" />
    </application>

</manifest>